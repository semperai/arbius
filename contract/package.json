{
  "name": "arbius-contracts",
  "private": true,
  "version": "1.0.0",
  "description": "arbius",
  "author": "Kasumi Null <kasumi.null@yandex.com>",
  "license": "MIT",
  "scripts": {
    "clean:contracts": "npx hardhat clean",
    "compile": "npx hardhat compile",
    "build": "yarn prettier '**/*.sol' --write && yarn clean:contracts && yarn compile",
    "test": "forge test",
    "test:hardhat": "npx hardhat test",
    "test:coverage": "forge coverage --ir-minimum --report lcov",
    "size": "npx hardhat size-contracts",
    "prettier:check": "prettier --check .",
    "prettier:lint": "prettier --write .",
    "slither": "slither --solc-remaps \"@openzeppelin/=$(pwd)/node_modules/@openzeppelin/ @prb=node_modules/@prb @arbitrum=node_modules/@arbitrum\"",
    "coverage": "npx hardhat coverage --via-ir",
    "forge-test": "forge test --fork-url http://localhost:8545 --fork-block-number 18",
    "forge-test-v": "forge test --fork-url http://localhost:8545 --fork-block-number 18 -vvv"
  },
  "devDependencies": {
    "@arbitrum/nitro-contracts": "^1.3.0",
    "@arbitrum/sdk": "^3.7.3",
    "@commitlint/cli": "^16.3.0",
    "@commitlint/config-conventional": "^16.2.4",
    "@nomicfoundation/hardhat-foundry": "^1.2.0",
    "@nomicfoundation/hardhat-verify": "^2.1.1",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@openzeppelin/contracts": "^4.9.3",
    "@openzeppelin/contracts-upgradeable": "^4.9.5",
    "@openzeppelin/hardhat-upgrades": "^1.22.1",
    "@openzeppelin/test-helpers": "^0.5.16",
    "@prb/math": "^4.0.0",
    "@typechain/ethers-v5": "^11.1.2",
    "@typechain/hardhat": "^6.1.6",
    "@types/chai": "^4.3.20",
    "@types/chai-as-promised": "^8.0.2",
    "@types/mocha": "^9.1.1",
    "@types/node": "^16.18.126",
    "@uniswap/v3-core": "^1.0.1",
    "@uniswap/v3-periphery": "^1.4.4",
    "chai": "^4.5.0",
    "chai-as-promised": "^8.0.2",
    "chai-ethers": "^0.0.1",
    "dotenv": "^10.0.0",
    "ethereum-waffle": "^3.4.4",
    "ethers": "^5.8.0",
    "ganache-cli": "^6.12.2",
    "hardhat": "^2.26.3",
    "hardhat-contract-sizer": "^2.10.1",
    "hardhat-gas-reporter": "^1.0.10",
    "husky": "^9.1.7",
    "mocha": "^9.2.2",
    "prettier": "^2.8.8",
    "prettier-plugin-solidity": "^1.4.3",
    "solidity-coverage": "^0.8.16",
    "ts-generator": "^0.1.1",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^4.9.5",
    "uniswap-v2-deploy-plugin": "^0.0.4"
  }
