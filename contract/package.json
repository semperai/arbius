{
  "name": "arbius-contracts",
  "private": true,
  "version": "1.0.0",
  "description": "arbius",
  "author": "Kasumi Null <kasumi.null@yandex.com>",
  "license": "MIT",
  "scripts": {
    "clean:contracts": "npx hardhat clean",
    "compile": "npx hardhat compile",
    "build": "yarn prettier '**/*.sol' --write && yarn clean:contracts && yarn compile",
    "test": "npx hardhat test",
    "size": "npx hardhat size-contracts",
    "prettier:check": "prettier --check .",
    "prettier:lint": "prettier --write .",
    "slither": "slither --solc-remaps \"@openzeppelin/=$(pwd)/node_modules/@openzeppelin/ @prb=node_modules/@prb @arbitrum=node_modules/@arbitrum\"",
    "coverage": "npx hardhat coverage --network localhost",
    "forge-test": "forge test --fork-url http://localhost:8545 --fork-block-number 18",
    "forge-test-v": "forge test --fork-url http://localhost:8545 --fork-block-number 18 -vvv"
  },
  "devDependencies": {
    "@arbitrum/nitro-contracts": "^1.0.2",
    "@arbitrum/sdk": "^3.2.0",
    "@commitlint/cli": "^16.1.0",
    "@commitlint/config-conventional": "^16.0.0",
    "@nomicfoundation/hardhat-foundry": "^1.1.2",
    "@nomicfoundation/hardhat-verify": "^2.1.1",
    "@nomiclabs/hardhat-ethers": "^2.2.2",
    "@openzeppelin/contracts": "^4.9.3",
    "@openzeppelin/contracts-upgradeable": "^4.9.5",
    "@openzeppelin/hardhat-upgrades": "^1.22.1",
    "@openzeppelin/test-helpers": "^0.5.16",
    "@prb/math": "^4.0.0",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.2",
    "@types/chai": "^4.2.22",
    "@types/chai-as-promised": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.7",
    "@uniswap/v3-core": "^1.0.1",
    "@uniswap/v3-periphery": "^1.4.4",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "chai-ethers": "^0.0.1",
    "dotenv": "^10.0.0",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.7.2",
    "ganache-cli": "^6.12.2",
