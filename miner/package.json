  "license": "MIT",
  "scripts": {
    "clean": "rimraf ./build",
    "build": "yarn clean && tsc && copyfiles -u 1 src/**/*.sql build/",
    "start": "node build/start.js",
    "start:dev": "npx nodemon",
    "watch:solution": "npx nodemon --exec \"npx ts-node ./src/solutionwatch.ts\"",
    "watch:asshole": "npx nodemon --exec \"npx ts-node ./src/assholewatch.ts MiningConfig.json\"",
    "watch:validator": "npx nodemon --exec \"npx ts-node ./src/validatorwatch.ts\"",
    "test": "mocha -r ts-node/register",
    "pinata:gc": "npx ts-node scripts/pinata_unpin_old_files.ts"
  },
  "devDependencies": {
    "@types/chai": "^4.2.22",
    "@types/chai-as-promised": "^7.1.4",
    "@types/express": "^4.17.17",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.7",
    "@types/sqlite3": "^3.1.8",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "chai-ethers": "^0.0.1",
    "dotenv": "^10.0.0",
    "ethers": "^5.7.2",
    "husky": "^7.0.4",
    "mocha": "^9.1.3",
    "rimraf": "^5.0.0",
    "ts-generator": "^0.1.1",
    "ts-node": "^10.4.0",
    "typechain": "^6.0.5",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "@scure/base": "^1.1.1",
    "@types/blessed": "^0.1.21",
    "axios": "^1.3.4",
    "blessed": "^0.1.81",
    "body-parser": "^1.20.2",
    "copyfiles": "^2.4.1",
    "express": "^4.18.2",
    "form-data": "^4.0.0",
    "ipfs-http-client": "^56.0.2",
    "nodemon": "^2.0.22",
    "replicate": "replicate/replicate-javascript",
    "sqlite3": "^5.1.6",
    "tslog": "^4.8.2"
  }
}
